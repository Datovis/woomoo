#mobile-nav
  background: rgba(0, 0, 0, 0.8)
  position: fixed
  top: -60px
  left: 0
  width: 100%
  text-align: center
  transition: top 0.3s
  &.on
    top: 0
  @media mq-normal
    display: none

.mobile-nav-link
  padding: 0 10px
  line-height: 60px
  color: #fff
  height: 60px
  text-decoration: none
  display: inline-block
  @media screen and (min-width: 401px)
    padding: 0 20px

#mobile-nav-toggle
  width: 30px
  height: 30px
  image: "images/bg-icon-menu-normal.png" @width @height
  position: absolute
  top: 22px + 60px
  right: 14px
  cursor: pointer
  display: block
  &:active, .on &
    image: "images/bg-icon-menu-press.png" @width @height