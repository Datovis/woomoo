#mobile-nav
  background: rgba(0, 0, 0, 0.8)
  position: fixed
  top: 0
  left: 0
  width: 100%
  text-align: center
  &.on
    top: 0
  @media mq-normal
    display: none

.mobile-nav-link
  padding: 0 10px
  line-height: 60px
  color: #fff
  height: 60px
  text-decoration: none
  display: inline-block
  position: relative
  &.active
    &:before
      content: ""
      position: absolute
      bottom: 14px
      left: 0
      right: 0
      border-bottom: 3px solid #fff
  @media screen and (min-width: 401px)
    padding: 0 20px