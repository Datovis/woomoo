#screen-crew
  background: screen-crew

.member-wrap
  text-align: center
  padding: 20px
  display: none
  &:first-of-type
    padding-top: 34px
  &.vip
    display: block

.member-img
  width: 62px
  height: 62px
  border: 3px solid #fff
  border-radius: 50%
  display: block
  overflow: hidden
  margin: 0 auto
  background: #505050

.member-social
  height: 38px

.member-name
  color: #fff
  font-size: 20px
  display: block

.member-tagline
  color: #fff
  font-size: 12px
  display: block
  padding: 10px 0 15px

.member-desc
  color: #000
  opacity: 0.3
  font-size: 13px
  width: 200px
  height: 60px
  margin: 0 auto