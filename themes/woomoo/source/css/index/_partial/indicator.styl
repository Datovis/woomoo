#indicator
  position: fixed
  right: 23px
  top: 50%
  height: 10px * 4 + 15px * 3
  margin-top: @height * -0.5
  @media mq-mobile
    display: none

.indicator-link
  display: block
  width: 6px
  height: 6px
  position: relative
  border: 2px solid rgba(0, 0, 0, 0.3)
  margin-bottom: 15px
  border-radius: 50%
  &.active, &:hover
    .indicator-background
      opacity: 0.3
    .indicator-text
      padding-right: 15px
      opacity: 0.8

.indicator-background
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  background: #000
  opacity: 0
  border-radius: 50%
  transition: opacity 0.3s

.indicator-text
  position: absolute
  text-align: right
  font-size: 12px
  color: #0f0f0f
  opacity: 0
  right: 0
  top: -4px
  transition: 0.3s