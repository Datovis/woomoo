@import "nib"
@import "_variables"
@import "../_util/mixin"

global-reset()

@font-face
  font-family: icomoon
  font-style: normal
  font-weight: normal
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  src: url(font-icon-path + ".eot")
  src: url(font-icon-path + ".eot?#iefix") format("embedded-opentype"),
       url(font-icon-path + ".woff") format("woff"),
       url(font-icon-path + ".ttf") format("truetype"),
       url(font-icon-path + ".svg") format("svg")

body
  font-family: font-sans

#wrap
  position: relative
  @media mq-mobile
    margin-top: 60px

.screen
  text-align: center
  position: relative

.screen-title
  font-size: 25px
  color: #fff
  opacity: 0.5
  text-transform: uppercase
  text-align: center
  position: relative
  padding: 30px 0 20px
  &:before
    content: ""
    position: absolute
    bottom: 0
    left: 50%
    margin-left: -25px
    border-bottom: 1px solid #fff
    width: 50px
  @media mq-normal
    padding-top: 40px

@import "_partial/intro"
@import "_partial/team"
@import "_partial/products"
@import "_partial/contact"
@import "_partial/indicator"
@import "_partial/nav"
