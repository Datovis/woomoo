@import "nib"
@import "_variables"
@import "../_util/mixin"

global-reset()

html, body
  width: 100%
  height: 100%
  overflow: hidden

body
  font-family: font-sans

#wrap
  position: relative
  width: 100%
  height: 100%
  overflow: auto

.screen
  text-align: center
  position: relative

.screen-title
  font-size: 25px
  font-weight: bold
  color: #fff
  opacity: 0.5
  text-transform: uppercase
  text-align: center
  position: relative
  padding: 30px 0 20px
  &:before
    content: ""
    position: absolute
    bottom: 0
    left: 50%
    margin-left: -25px
    border-bottom: 1px solid #fff
    width: 50px
  @media mq-normal
    padding-top: 40px

@import "_partial/intro"
@import "_partial/crew"
@import "_partial/products"
@import "_partial/contact"
@import "_partial/indicator"
@import "_partial/nav"