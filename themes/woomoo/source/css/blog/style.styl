@import "nib"
@import "_variables"
@import "../_util/mixin"

global-reset()

html, body
  overflow-x: hidden

body
  background: color-background
  color: color-default
  font: font-size-content font-sans
  -webkit-text-size-adjust: 100%

.outer
  clearfix()
  max-width: max-width
  margin: 0 auto
  position: relative

.inner
  margin: 0 layout-margin

.left, .alignleft
  float: left

.right, .alignright
  float: right

.clear
  clear: both

@import "_partial/header"
@import "_partial/article"
@import "_partial/footer"