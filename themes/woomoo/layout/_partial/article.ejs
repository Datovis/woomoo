<div class="article article-type-<%= post.layout %>" itemscope itemprop="blogPost">
  <div class="article-header">
    <%- partial('post/title', {class_name: 'article-title'}) %>
    <%- partial('post/date') %>
    <% if (!index){ %>
      <%- partial('post/share', {class_name: 'article-share-header'}) %>
    <% } %>
  </div>
  <div class="article-entry" itemprop="articleBody">
    <% if (index && post.excerpt){ %>
      <%- post.excerpt %>
      <% if (theme.excerpt_link){ %>
        <a href="<%- config.root %><%- post.path %>#more" class="article-more-link"><%= theme.excerpt_link %></a>
      <% } %>
    <% } else { %>
      <%- post.content %>
    <% } %>
  </div>
  <div class="article-footer">
    <%- partial('post/author') %>
    <%- partial('post/share', {class_name: 'article-share-footer'}) %>
  </div>
</div>

<% if (!index && post.comments && config.disqus_shortname){ %>
  <div id="disqus_thread">
    <noscript>Please enable JavaScript to view the <a href="//disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
  </div>
<% } %>